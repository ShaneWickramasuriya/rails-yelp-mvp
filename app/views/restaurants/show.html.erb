<div class="container">
    <%= link_to "Back to restaurants", restaurants_path %>

    <h1><%= @restaurant.name %></h1>
    <p><strong>Address: </strong><%= @restaurant.address %></p>
    <p><strong>Cuisine: </strong><%= @restaurant.category %></p>
    <p><strong>Phone Number: </strong><%= @restaurant.phone_number %></p>
    ---

    <h3>Reviews</h3>
    <% @restaurant.reviews.each do |review| %>
    <p><%= review.content %> - <%= review.rating %></p>
    <% end %>
    ---
    <%#= link_to "Add a review", new_restaurant_review_path(@restaurant), class: "btn btn-primary" %>

    <h2>New review for <%= @restaurant.name %></h2>
    <%= simple_form_for([@restaurant, @review]) do |f| %>
    <%= f.input :content %>
    <%= f.input :rating %>
    <%= f.submit "Add Review", class: "btn btn-primary"%>
    <% end %>

</div>
